<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/notes_layout_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="notes_number"
                android:layout_marginTop="2dp"
                android:textColor="#000"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/notes_layout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="notes name"
                android:layout_below="@+id/notes_layout_number"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/notes_layout_save_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notes_layout_name"
                android:text="notes saved text"
                android:textSize="20dp"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:id="@+id/notes_layout_remove"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>